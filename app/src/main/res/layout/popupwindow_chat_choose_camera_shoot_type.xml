<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/chatChooseShootMask"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvShootPicture"
        android:background="#30000000"/>

    <TextView
        android:id="@+id/tvShootPicture"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintBottom_toTopOf="@id/viewDivider"
        android:gravity="center"
        android:text="拍摄图片"
        android:textColor="@color/colorBlack"
        android:background="@color/colorWhite"/>

    <View
        android:id="@+id/viewDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        app:layout_constraintBottom_toTopOf="@id/tvShootVideo"
        android:background="@color/color_c1c1c1"/>

    <TextView
        android:id="@+id/tvShootVideo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintBottom_toTopOf="@id/viewDivider1"
        android:gravity="center"
        android:text="拍摄视频"
        android:textColor="@color/colorBlack"
        android:background="@color/colorWhite"/>

    <View
        android:id="@+id/viewDivider1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        app:layout_constraintBottom_toTopOf="@id/tvCancel"
        android:background="@color/colorAppBac"/>

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/colorBlack"
        android:background="@color/colorWhite"/>


</androidx.constraintlayout.widget.ConstraintLayout>