<resources>

    <!-- Base application theme. -->
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ll_horizontal_match_wrap" parent="match_wrap">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="list_no_padding" parent="match_wrap">
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <style name="ll_listviewitem" parent="ll_horizontal_match_wrap">
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="list_nomal_text_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="title_text_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <style name="DialogStyleBottom" parent="android:Theme.Dialog">
        <!--<item name="android:windowAnimationStyle">@style/A</item>-->
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <!--详情key-value中item的layout样式-->
    <style name="detail_item_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--详情key样式-->
    <style name="detail_key_text">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--EditText单行样式-->
    <style name="editText_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@drawable/edittext_normal_bg</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColorHint">@color/cardview_shadow_end_color</item>
    </style>

    <!--详情key-value中item的垂直居中layout样式-->
    <style name="detail_item_center_vertical_layout" parent="detail_item_layout">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="spinner_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/edittext_normal_bg</item>
        <item name="android:minHeight">30dp</item>
    </style>

    <!--spinner自己-->
    <style name="spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:overlapAnchor">false</item>
        <item name="android:background">@color/text_black</item>
    </style>

    <!--右侧图片-->
    <style name="spinner_img">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:src">@drawable/function_training_selector</item>
    </style>

    <style name="pw_animation_style">
        <item name="android:windowEnterAnimation">@android:anim/accelerate_decelerate_interpolator</item>
        <item name="android:windowExitAnimation">@android:anim/accelerate_decelerate_interpolator</item>
    </style>

    <!-- Application theme. -->
    <style name="CustomTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
